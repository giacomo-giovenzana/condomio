<p id="notice"><%= notice %></p>

<h1>Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Route</th>
      <th>Street number</th>
      <th>Postal code</th>
      <th>Hamlet</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Locality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.route %></td>
        <td><%= building.street_number %></td>
        <td><%= building.postal_code %></td>
        <td><%= building.hamlet %></td>
        <td><%= building.latitude %></td>
        <td><%= building.longitude %></td>
        <td><%= building.locality %></td>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

